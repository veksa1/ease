# Environment Configuration
# Copy this file to .env and update the values

# Frontend Configuration
REACT_APP_API_URL=http://localhost:8000
REACT_APP_ENVIRONMENT=development
# Vite-style accessors (preferred in this repo)
VITE_API_URL=http://localhost:8000
VITE_ENVIRONMENT=development
VITE_REALTIME_SESSION_ENDPOINT=/api/openai-realtime-session

# Backend Configuration (for nginx proxy)
BACKEND_URL=http://backend:8000

# Voice assistant configuration (server side)
# The client never sees OPENAI_API_KEY, set it only on the server/hosting platform.
OPENAI_API_KEY=
OPENAI_REALTIME_MODEL=gpt-4o-realtime-preview
OPENAI_REALTIME_VOICE=alloy

# Database Configuration (when using database)
# DB_NAME=myapp
# DB_USER=postgres
# DB_PASSWORD=your_secure_password
# DATABASE_URL=postgresql://postgres:your_secure_password@database:5432/myapp

# Production overrides
# REACT_APP_API_URL=https://api.yourdomain.com
# REACT_APP_ENVIRONMENT=production
# VITE_API_URL=https://api.yourdomain.com
# VITE_REALTIME_SESSION_ENDPOINT=/api/openai-realtime-session
# BACKEND_URL=http://backend:8000
